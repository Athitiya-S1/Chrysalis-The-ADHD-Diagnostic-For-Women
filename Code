<!--This sets the title of the app.-->
      <title>Hello World</title>  
<!--adjusts the width of the pages-->
      <meta name="viewport" content="width=device-width, initial-scale=1">
<!enables mobile app usage-->
      <meta name="apple-mobile-web-app-capable" content="yes">
<!--Imports CSS stylesheets. Remember, CSS sets the layout of the app-->
<!--meta tags contain info about page that will not be displayed-->
      <link rel="stylesheet" href="w3.css">
      <link rel="stylesheet" href="w3-colors-flat.css">
</head> 

<script>

	var totalQuestions = 8;
//I had to add this variable in order to ensure that both of the percentages added to a 100//
        var hyperthyroidism_count = 0;
//var is used to declare variables, values, and what you want the variable to do//
//In this case is used to declare the value of hyperthyroidism starts at 0//
        var hypothyroidism_count = 0;
//var is used to declare variables, values, and what you want the variable to do//
//In this case is used to declare the value of hypothyroidism starts at 0//


        function hyperthyroidismAdd(){
            hyperthyroidism_count = hyperthyroidism_count + 1;
//Increases the count for hyperthyroidism//
        }

        function hypothyroidismAdd(){
            hypothyroidism_count = hypothyroidism_count + 1;
//Increases the count for hypothyroidism//
        }

	function getResult() {
//Dsiplays and calculates percentages//
		var hyperthyroidismPercent=(hyperthyroidism_count/totalQuestions)*100;
	//Divides hyperthyroidism count by 8(number of question) and turns into percentage//
		var hypothyroidismPercent = (hypothyroidism_count/totalQuestions)*100;
	//Divides hypothyroidism count by 8(number of question) and turns into percentage//
		var totalPercent = hyperthyroidismPercent + hypothyroidismPercent;
	
	//I noticed that if you go to a previous question and answer the percentage exceed the 100 percent value. So I looked up how to fix this//
	//Check if combined total is not equal to 100//
    		 if (totalPercent !== 100) {
	//Functions to fix percentages if they do not equal 100//
        		var scale = 100 / totalPercent;
	//Scales both variables so they equal to 100//
       			hyperthyroidismPercent *= scale;
			hypothyroidismPercent *= scale;
		}
	
	var resultText = document.getElementById("resultText");
	//Function to display the results//
		resultText.innerHTML = "Probability it is hyperthyroidism = " + hyperthyroidismPercent.toFixed(2) + "%<br> Probability it is hypothyroidism = " + hypothyroidismPercent.toFixed(2) + "%";
	//Added the percentage signs//
	//Tells the system how to display results. Two decimal points enabled//

	}
	function restartTest(){
	//Function to restart the test
 		hyperthyroidism_count = 0;
		hypothyroidism_count = 0;
    	//Reset the counts of the variables//
    		location.href = "#content0";
	//Send the person back to the first page//
	}



</script>	


<!-- THIS STYLE CODE HELPS MAKE YOUR APP LOOK GOOD. PROBABLY DONT MESS WITH IT -->
